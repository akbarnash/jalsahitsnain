<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swAudio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AudiosFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pgAudios"
            android:layout_gravity="center"/>
    </FrameLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        android:layout_above="@+id/jcplayer">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/myListView"
                android:choiceMode="singleChoice"
                android:listSelector="@android:color/darker_gray"
                android:padding="10dp"/>



        </LinearLayout>
    <com.example.jean.jcplayer.view.JcPlayerView
        android:id="@+id/jcplayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:play_icon="@drawable/ic_play_circle"
        app:pause_icon="@drawable/ic_pause_circle"
        app:play_icon_color="@color/colorPrimary"
        app:pause_icon_color="@color/colorPrimary"
        app:next_icon_color="@color/colorPrimary"
        app:previous_icon_color="@color/colorPrimary"
        app:seek_bar_color="@color/colorPrimary"
        app:progress_color="@color/colorPrimary"
        android:visibility="gone"/>



</RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>